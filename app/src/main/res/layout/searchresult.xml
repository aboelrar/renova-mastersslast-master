<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.begroup.besoultion.drbooking.view.search">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_45sdp"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appback"
        android:orientation="vertical">
        <ViewSwitcher
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/viewswitch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:id="@+id/sortlist"
    android:gravity="center"
    android:text="تصنيف"
    android:textColor="@android:color/white"
    android:textSize="@dimen/_13ssp"
    android:orientation="vertical"
    android:background="@color/appback">
    </TextView>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_expand_more_black_24dp"/>
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/appback">
            </LinearLayout>
        </ViewSwitcher>

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/doctorlist">
</android.support.v7.widget.RecyclerView>
</LinearLayout>
</LinearLayout>
    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:itemBackground="@drawable/bottombg"
        app:itemIconTint="@color/iconcolor"
        app:itemTextColor="@color/iconcolor"
        android:background="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:tabTextAppearance="@style/BottomCustomTabText"
        app:menu="@menu/bar"
        tools:ignore="RtlCompat"></android.support.design.widget.BottomNavigationView>
</RelativeLayout>